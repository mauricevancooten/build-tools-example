{
  "name": "compile-tools-example",
  "version": "0.0.1",
  "devDependencies": {
    "browser-sync": "^2.17.3",
    "browserify": "^13.1.0",
    "eslint": "^4.2.0",
    "node-sass": "^3.10.1",
    "parallelshell": "^2.0.0",
    "sticky-scroll": "^1.0.4",
    "watch": "^1.0.1"
  },
  "scripts": {
    "compile:sass": "mkdir -p public/css && node-sass --include-path scss src/sass/styles.scss public/css/styles.css",
    "compile:css": "watch 'npm run compile:sass' src/sass/",
    "lint": "eslint src/js/",
    "precompile:browserify": "npm run lint",
    "compile:browserify": "mkdir -p public/js && browserify src/js/main.js > public/js/bundle.js",
    "compile:js": "watch 'npm run compile:browserify' src/js/",
    "compile": "npm run compile:sass && npm run compile:browserify",
    "compile:watch": "watch 'npm run compile' src/",
    "browser-sync": "browser-sync start --server --files '*.html' 'public/'",
    "compile:sync": "parallelshell 'npm run compile:watch' 'npm run browser-sync'"
  }
}
